{% extends 'base.html.twig' %}
{% block title 'nos users' %}

{% block body %}
    <div class="container text-center mt-4">
        <h1>voir nos users</h1>
    </div>

    <div class="col-md-8">
        <h2>Liste des users ({{ total }})</h2>
        <br />Limit {{ limit }}
        <br />offset {{ offset }}
        <br />page {{ page }}
        <a href="{{ path("user_create") }}" class="btn btn-success" >Créer</a>

        <div>
            <a href="{{ path("user_index") }}?page=1"> << </a>
            {% if page>1 %}
                <a href="{{ path("user_index") }}?page={{ page-1 }}"> < </a>
            {% endif %}
            {% for i in 1..nb_page %}
                {% if i == page %}
                    {{ i }}
                {% else %}
                    <a href="{{ path("user_index") }}?page={{ i }}">{{ i }}</a>
                {% endif %}
            {% endfor %}
            {% if page<nb_page %}
                <a href="{{ path("user_index") }}?page={{ page+1 }}"> > </a>
            {% endif %}
            <a href="{{ path("user_index") }}?page={{ nb_page }}"> >> </a>
        </div>
        <table class="table table-striped ">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Groupe</th>
                    <th>Nom complet</th>
                    <th>Nom complet2</th>
                    <th>date de création</th>
                    <th>date de modification</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in user_list %}
                    <tr>
                        {{ include("/user/item.html.twig") }}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

